extends base

block content
  main.main
    .signup-form
      h2.heading-secondary.ma-bt-lg Signup for new account
      form#form-signup.form(novalidate='novalidate')
        .form__group
          label.form__label(for='name') Name
          input#name.form__input(type='text', required,autocomplete='off')
        .form__group
          label.form__label(for='email') Email address
          input#email.form__input(type='email', autocomplete='off', required )
        .form__group.ma-bt-md
          label.form__label(for='password') Password
          input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group.ma-bt-lg
          label.form__label(for='password-confirm') Confirm password
          input#password-confirm.form__input(type='password', placeholder='••••••••', required, minlength='8')
        .form__group
          button.btn.btn--green Signup